<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Homework4.SpeedDialog"
        Title="Set Speed"
        Width="300"
        Height="200">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Enter speed multiplier (greater than 0):"/>
        <TextBox x:Name="SpeedInput" Text="1"/>
        <Button Content="Confirm" Click="OnConfirmClick"/>
        <TextBlock x:Name="ErrorMessage" Foreground="Red" IsVisible="False" 
                   Text="Invalid input. Please enter a number > 0."/>
    </StackPanel>
</Window>