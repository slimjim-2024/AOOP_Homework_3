<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Homework4"
        x:Class="Homework4.NewOrderWindow"
        Title="New Order"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" Spacing="15">
        <!-- Load JSON Button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Load .json"
                    Click="OnLoadJsonClick"
                    Width="100"
                    Background="#34912A"
                    Foreground="White"/>
        </StackPanel>

        <!-- Recipes List -->
        <ListBox x:Name="RecipesList" 
                 Height="300"
                 Background="#CFB54F"
                 BorderThickness="1"
                 BorderBrush="#B40614"
                 SelectionMode="Multiple">
        <ListBox.ItemTemplate>
            <DataTemplate x:DataType="local:Recipe">
                <StackPanel Spacing="5">
                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Difficulty}" Foreground="#666"/>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Equipment: "/>
                        <ItemsControl ItemsSource="{Binding Equipment}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontStyle="Italic"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        </ListBox>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Cancel" 
                    Width="80" 
                    Click="OnCancelClick"
                    Background="#B40614"
                    Foreground="White"/>
            <Button Content="Add Order" 
                    Width="100" 
                    Click="OnAddOrderClick"
                    Background="#34912A" 
                    Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>