<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Homework4.MainWindow"
        Title="Homework4"
        Width="800"
        Height="600">
        
    <StackPanel Orientation="Vertical" Margin="20" Spacing="20">
        <!-- Header Block -->
        <Border Background="#B40614" 
                CornerRadius="5"
                Padding="10"
                HorizontalAlignment="Center">
            <TextBlock Text="The app name" 
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Button Block -->
        <Border Background="#B40614"
                CornerRadius="5"
                Padding="10"
                HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Start" 
                        Width="90" 
                        Background="#CFB54F"
                        Foreground="White"
                        HorizontalContentAlignment="Center"/>
                <Button Content="Stop" 
                        Width="90" 
                        Background="#CFB54F"
                        Foreground="White"
                        HorizontalContentAlignment="Center"/>
                <Button Content="New Order" 
                        Width="110" 
                        Background="#CFB54F"
                        Foreground="White"
                        HorizontalContentAlignment="Center"/>
                <Button x:Name="SpeedButton" 
                        Content="Speed (1x)" 
                        Width="110" 
                        Background="#CFB54F"
                        Foreground="White"
                        HorizontalContentAlignment="Center"
                        Click="OnSpeedButtonClick"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>